<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carlos.a21632699.mrfox.MySplash"
    android:background="@drawable/spashfox"
    >

    <ImageView
        android:id="@+id/foxSplash"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        app:srcCompat="@drawable/fox" />

    <TextView
        android:id="@+id/unsplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/idfoto_login" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foxSplash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:text="@string/titulosplash"
        android:textSize="36sp"
        android:textColor="@color/blanco"/>
</RelativeLayout>
